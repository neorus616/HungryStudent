<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic_public"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/profile_fullname_public"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic_public"
                android:layout_marginTop="5dp"
                android:text="Profile Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/follow_button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_fullname_public"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:background="@color/design_default_color_primary_dark"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <Button
                android:id="@+id/unfollow_button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_fullname_public"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:background="@color/primaryRed"
                android:text="Unfollow"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <Button
                android:id="@+id/myPosts"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/unfollow_button"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimaryDark"
                android:text="My Posts"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myFollows"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/unfollow_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@color/colorPrimaryDark"
                android:text="My Follows"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>