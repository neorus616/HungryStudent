<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_splash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="55dp"
        android:src="@drawable/profile"
        app:civ_border_color="#E6E6E6"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/greeting_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_splash"
        android:layout_alignStart="@+id/profile_image_splash"
        android:layout_alignEnd="@+id/profile_image_splash"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Hello username"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/justText_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greeting_splash"
        android:layout_alignStart="@+id/profile_image_splash"
        android:layout_alignEnd="@+id/profile_image_splash"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text="What to cook today?"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/cost_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/justText_splash"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="cost"
        android:textSize="22sp"
        android:textStyle="bold" />//

    <ToggleButton
        android:id="@+id/c10_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/justText_splash"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/cost_splash"
        android:textOff="10"
        android:textOn="10" />

    <ToggleButton
        android:id="@+id/c20_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/justText_splash"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/c10_splash"
        android:textOff="20"
        android:textOn="20" />

    <ToggleButton
        android:id="@+id/c30_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/justText_splash"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/c20_splash"
        android:textOff="30"
        android:textOn="30" />

    <TextView
        android:id="@+id/time_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost_splash"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="time"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/t10_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost_splash"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/time_splash"
        android:textOff="10"
        android:textOn="10" />

    <ToggleButton
        android:id="@+id/t20_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost_splash"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/t10_splash"
        android:textOff="20"
        android:textOn="20" />

    <ToggleButton
        android:id="@+id/t30_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost_splash"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/t20_splash"
        android:textOff="30"
        android:textOn="30" />

    <Button
        android:id="@+id/searchRecipe_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Search"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/allRecipes_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchRecipe_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Show all recipes"
        android:textAllCaps="false" />


</RelativeLayout>